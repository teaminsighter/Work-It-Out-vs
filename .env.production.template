# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Database Configuration (REQUIRED)
# For MySQL on Hostinger:
DATABASE_URL="mysql://username:password@hostname:port/database_name"
# For PostgreSQL:
# DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# Next.js Configuration (REQUIRED)
NEXTAUTH_SECRET="your-secure-random-string-at-least-32-characters"
NEXTAUTH_URL="https://yourdomain.com"

# OpenAI Integration (OPTIONAL)
OPENAI_API_KEY="your_openai_api_key_here"
AI_ASSISTANT_MODEL="gpt-4"

# Firebase Configuration (OPTIONAL - for file storage)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"

# Email Configuration (OPTIONAL)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
FROM_EMAIL="noreply@yourdomain.com"

# Analytics & Tracking (OPTIONAL)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
GTM_CONTAINER_ID="GTM-XXXXXXX"
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# Security Settings
NODE_ENV="production"
ADMIN_SESSION_TIMEOUT="3600000"  # 1 hour in milliseconds

# Company Information
COMPANY_NAME="Work It Out"
COMPANY_EMAIL="info@yourdomain.com"
COMPANY_PHONE="+64 9 XXX XXXX"
COMPANY_ADDRESS="Your Company Address"