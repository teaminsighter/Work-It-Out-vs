rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, super_admin can write to any.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }

    // Leads can be read by authenticated users with specific roles.
    // Leads can be created by any authenticated user.
    // Admins can update, super_admins can delete.
    match /leads/{leadId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'analyst', 'viewer'];
      allow create: if true;
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Events are immutable. Readable by analysts, admins, and super_admins. Creatable by anyone.
    match /events/{eventId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'analyst'];
      allow create: if true;
      allow update, delete: if false;
    }

    // Sessions are readable by analysts, admins, and super_admins. Creatable/updatable by anyone.
    match /sessions/{sessionId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'analyst'];
      allow create, update: if true;
      allow delete: if false;
    }

    // Form analytics are readable by analysts, admins, and super_admins. Creatable/updatable by anyone.
    match /form_analytics/{formAnalyticsId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'analyst'];
      allow create, update: if true;
      allow delete: if false;
    }

    // A/B tests can be read by any authenticated user, but only managed by admins.
    match /ab_tests/{testId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }

    // Landing pages can be read by the public, but only managed by admins.
    match /landing_pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }

    // Integrations can be read by admins, but only managed by super_admins.
    match /integrations/{integrationId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // GTM Templates can be read by any authenticated user, but only managed by admins.
    match /gtm_templates/{templateId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }

    // Chat Queries can only be read/written by the user who created them or admins.
    match /chat_queries/{queryId} {
        allow read, write: if request.auth != null && (request.resource.data.user_id == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin']);
    }
  }
}
